<h1>Students</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Affiliation</th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= link_to student.first_last, student %></td>
    <td><%= student.affiliation %></td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Student %>
<%= link_to 'New Student', new_student_path %>
<% end %>
